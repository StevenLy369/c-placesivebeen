@using PlacesIveBeen.Models;

<h1>Places Ive Been!</h1>

  @if (Model.Count == 0)
  {
    <p>There are no items in the list. </p>
  }
  <ul>
  @foreach (Places place in Model)
  {
    <li><a href='/items/@place.Id'>@place.Description </a></li>
  }
</ul>
<a href="/places/new"> Add a new item!.</a>

<form action="/places/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>